<%- include('../partials/head') %>
<link rel="stylesheet" href="/css/dashboard.css">

</head>

<body>
    
<%- include('../partials/navigation') %>
		<!-- /HEADER -->

		
<h2>Welcome, <%= user.name %> (Seller Dashboard)</h2>
<a href="/add-auction" style="color: #D10024;">+ Create New Auction</a>

<table style="width: 100%; margin-top: 20px; border-collapse: collapse;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Status</th>
      <th>Ends</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% auctions.forEach(a => { %>
      <tr>
        <td><%= a.title %></td>
        <td>â‚¦<%= a.current_price %></td>
        <td><%= a.status %></td>
        <td><%= new Date(a.end_time).toLocaleString() %></td>
        <td>
          <% if (a.status === 'active') { %>
            <a href="/edit/<%= a.id %>" class="btn edit">Edit</a>
          <% } %>
          <form action="/delete/<%= a.id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn delete" onclick="return confirm('Are you sure?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>




		
		


<!-- FOOTER -->

</body>


